<UserControl
    x:Class="DuplicateCleaner.Modules.MainModule.Views.FilesList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DuplicateCleaner.Modules.MainModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="FileFormat_DataTemplate">
            <TextBlock Text="{Binding FileName}" />
        </DataTemplate>
    </UserControl.Resources>
    <ScrollViewer>
        <ListBox ItemTemplate="{StaticResource FileFormat_DataTemplate}" />
    </ScrollViewer>
</UserControl>
